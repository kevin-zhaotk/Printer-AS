<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#436EEE"
    >
    
    <RadioGroup
        android:id="@+id/tab_group"
        android:layout_width="480dp"
        android:layout_height="@dimen/top_btn_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0dip">
        
        <RadioButton 
            android:id="@+id/btn_control"
            android:layout_width="160dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:checked="true"
	        android:button="@null"
	        android:gravity="center"
	        android:background="@drawable/control_selector"
	        android:textColor="@color/tab_color_selector"
	        android:textSize="@dimen/top_btn_textsize"
	        android:focusable="false"
            />
        
        <RadioButton 
            android:id="@+id/btn_edit"
            android:layout_width="160dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:button="@null"
	        android:gravity="center"
	        android:background="@drawable/edit_selector"
	        android:textColor="@color/tab_color_selector"
	        android:textSize="@dimen/top_btn_textsize"
	        android:focusable="false"
            />
        
        <RadioButton 
            android:id="@+id/btn_setting"
            android:layout_width="160dp"
	        android:layout_height="fill_parent"
            android:layout_weight="1"
	        android:button="@null"
	        android:gravity="center"
	        android:background="@drawable/settings_selector"
	        android:textColor="@color/tab_color_selector"
	        android:textSize="@dimen/top_btn_textsize"
	        android:focusable="false"
            />
         <RadioButton 
            android:id="@+id/btn_Other"
            android:layout_width="160dp"
	        android:layout_height="fill_parent"
            android:layout_weight="1"
	        android:button="@null"
	        android:gravity="center"
	        android:background="@drawable/but_socket"
	        android:textColor="@color/tab_color_selector"
	        android:textSize="@dimen/top_btn_textsize"
	        android:focusable="false"
            />
    </RadioGroup>
    <TextView
            android:id="@+id/IP_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="25sp"
	    	android:gravity="center"
        />
    <!--
    <RelativeLayout 
        android:id="@+id/tv_counter_msg"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/tab_group"
        android:layout_alignParentTop="true"
        
        />
     -->
     <RelativeLayout 
         android:id="@+id/ctrl_extra"
         android:layout_width="match_parent"
         android:layout_height="@dimen/top_btn_height"
         android:layout_toRightOf="@id/tab_group"
         android:layout_alignParentTop="true"
         >
        <RelativeLayout
            android:id="@+id/layout_cnt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_btn_height_half"
            android:gravity="center"
            android:layout_toLeftOf="@+id/msg_tranfer"
            
            >
            <TextView
                android:id="@+id/cnt_dw_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="@string/str_remain_ink"
                />
	        <TextView
	            android:id="@+id/count_down"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_toRightOf="@id/cnt_dw_label"
	            android:layout_marginLeft="20dp"
	            android:textColor="#000000"
	            android:textSize="25sp"
	        />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_btn_height_half"
            android:layout_toLeftOf="@+id/msg_tranfer"
            android:layout_below="@id/layout_cnt"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/cnt_cnter_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="@string/str_remain_ptimes"
                />
	        <TextView
		        android:id="@+id/ctrl_counter_view"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/cnt_cnter_label"
		        android:layout_marginLeft="20dp"
		        android:textColor="#000000"
		        android:textSize="25sp"
		        android:gravity="center"
	        />
	    </RelativeLayout>
         
        <ImageButton
            android:id="@+id/msg_tranfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/link"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            /> 
     </RelativeLayout>
     
     
     <RelativeLayout 
         android:id="@+id/edit_extra"
         android:layout_width="match_parent"
         android:layout_height="@dimen/top_btn_height"
         android:layout_toRightOf="@id/tab_group"
         android:layout_alignParentTop="true"
         android:visibility="gone"
         >
         <TextView
	         android:id="@+id/edit_message_view"
	         android:layout_width="match_parent"
	         android:layout_height="40dp"
	         android:layout_toLeftOf="@+id/delete"
	         android:text="@string/str_filename_no"
	         android:textColor="#000000"
	         android:textSize="25sp"
	         android:gravity="center"
	         
        	/>
         
         <TextView
             android:id="@+id/delete"
             android:layout_width="80dp"
             android:layout_height="60dp"
             android:background="@drawable/style_ctrlbtn_big"
             android:layout_alignParentRight="true"
             android:text="@string/str_del" 
             android:textSize="25sp"
             android:textColor="#000000"
             android:gravity="center"
             android:layout_centerVertical="true"
             />
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
             >
	         <RelativeLayout
			    android:id="@+id/btn_page_forward" 
			    android:layout_width="120dp"
		        android:layout_height="fill_parent"
		        android:layout_alignParentRight="true"
		        >
				<ImageView 
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:src="@drawable/style_ctrlbtn_bg_small"
				    />
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:gravity="center"
			        android:textSize="@dimen/ctrlButtonsTextsize_min"
			        android:textColor="#000000"
			        android:text="@string/str_page_backward" 
				    />
			</RelativeLayout>
		    
		    <RelativeLayout
			    android:id="@+id/btn_page_backward" 
			    android:layout_width="120dp"
		        android:layout_height="fill_parent"
		        android:layout_toLeftOf="@id/btn_page_backward"
		        android:visibility="gone"
		        >
				<ImageView 
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:src="@drawable/style_ctrlbtn_bg_small"
				    />
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:gravity="center"
			        android:textSize="@dimen/ctrlButtonsTextsize_min"
			        android:textColor="#000000"
			        android:text="@string/str_page_forward" 
				    />
			</RelativeLayout>
		</RelativeLayout>
     </RelativeLayout>
     
     <RelativeLayout 
         android:id="@+id/settings_view"
         android:layout_width="match_parent"
         android:layout_height="@dimen/top_btn_height"
         android:layout_toRightOf="@id/tab_group"
         android:layout_alignParentTop="true"
         android:gravity="center_horizontal"
         android:visibility="gone"
         >
         <ImageView
             android:id="@+id/link_state"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentRight="true"
             android:layout_marginTop="10dp"
             android:src="@drawable/link"
             />
        <RelativeLayout 
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/link_state"
            >
            <TextView
                android:id="@+id/setting_version_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textColor="#000000"
                android:textSize="25sp"
                android:singleLine="true"
                />
            <TextView
		        android:id="@+id/setting_version"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/setting_version_key"
		        android:textColor="#000000"
		        android:textSize="25sp"
		        android:singleLine="true"
        	/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/link_state"
            android:layout_below="@id/version"
            >
            <TextView
                android:id="@+id/setting_time_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_time"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="gone"
                />
	        <TextView
		         android:id="@+id/setting_ext_view"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_toRightOf="@id/setting_time_key"
		         android:textColor="#000000"
		         android:textSize="25sp"
	        />
        </RelativeLayout>
     </RelativeLayout>
     
    <RelativeLayout
         android:id="@+id/tab_content"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_below="@id/tab_group"
         >
    </RelativeLayout>
</RelativeLayout>
